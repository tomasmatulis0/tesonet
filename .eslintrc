{
    "extends": "@paysera",
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "import/resolver": {
            "alias": [
                ["@Assets", "./assets"],
                ["@Hooks", "./src/js/hooks"],
                ["@Config", "./src/js/config"],
                ["@Services", "./src/js/services"],
                ["@Components", "./src/js/components"]

            ]
        }
    },
    "rules": {
        "jsx-a11y/label-has-associated-control": "off"
    }
}
